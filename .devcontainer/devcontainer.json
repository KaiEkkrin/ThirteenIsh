{
  "name": "ThirteenIsh Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "8.0",
      "installUsingApt": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },

  "mounts": [
    "source=${localEnv:USERPROFILE}\\.claude,target=/home/vscode/.claude,type=bind,consistency=cached",
    "source=${localEnv:USERPROFILE}\\.claude.json,target=/home/vscode/.claude.json,type=bind,consistency=cached"
  ],

  "postCreateCommand": "dotnet tool install --global dotnet-ef",

  "containerEnv": {
    "BotToken": "${localEnv:BOT_TOKEN}"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.PowerShell"
      ]
    }
  },

  "forwardPorts": [3000, 5000, 5001, 5432],
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "onAutoForward": "notify"
    },
    "5000": {
      "label": "Backend HTTP",
      "onAutoForward": "notify"
    },
    "5001": {
      "label": "Backend HTTPS",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },

  "remoteUser": "vscode"
}